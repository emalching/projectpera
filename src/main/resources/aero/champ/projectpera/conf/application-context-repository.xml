	<bean id="mongo" class="org.springframework.data.mongodb.core.MongoFactoryBean">
		<property name="host" value="${db.mongo.host}" />
		<property name="port" value="${db.mongo.port}" />
	</bean>

	<bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
		<constructor-arg name="mongo" ref="mongo" />
		<constructor-arg name="databaseName" value="${db.mongo.database}" />
	</bean>

	<mongo:repositories base-package="aero.champ.projectpera.repository.mongodb"
		mongo-template-ref="mongoTemplate" />
